<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <h1 class="my-4 text-center"> Datos de cuenta</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.label :Nombre %><br />
        <%= f.text_field(:name, {:class => 'form-control', :placeholder => "Nombre", :autofocus => true, required: true}) %>
        <%= f.label :Apellido %><br />
        <%= f.text_field(:last_name, {:class => 'form-control', :placeholder => "Apellido", :autofocus => true, required: true}) %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field(:email, {:class => 'form-control', :placeholder => "email@bookflix.com",:required => true}) %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <%= f.label :Numero_de_tarjeta %><br />
          <%= f.number_field(:card_number, {:class => 'form-control', required: true}) %>
        </div>
        <div class="field">
          <%= f.label :fecha_de_vencimiento %><br />
          <%= f.number_field(:expiration_month_date, {:class => 'form-control',required: true,:placeholder => "Mes"}) %>
          <%= f.number_field(:expiration_year_date, {:class => 'form-control', required: true,:placeholder => "Año", :style=> "margin:10px 0px 0px 0px"}) %>
        </div>
        <div class="field">
          <%= f.label :Codigo_de_verificacion %><br />
          <%= f.number_field(:card_key, {:class => 'form-control', :placeholder => "CVC", :required => true}) %>
        </div>
        <div class="field">
          <%= f.label :Contraseña_actual %>
          <%= f.password_field(:current_password, {:class => 'form-control',autocomplete: "current-password", :required => true}) %>
        </div>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Necesitamos su contraseña actual para confirmar sus cambios.
        </small>
        <div class="field">
          <%= f.label :Cuenta_Premium %><br />
          <%= f.check_box(:membership_premium, {:class => 'form-control'},:checked => true,:unchecked => false)  %>
        </div>
        <div class="actions my-3">
          <%= f.submit('Actualizar datos',{:class => 'btn btn-primary btn-block' }) %>
        </div>
      <% end %>
      <%= link_to "Cambiar contraseña", subscribers_edit_pass_path , class: 'btn btn-primary btn-block'%>
      <h3 class="my-4 text-center">Desuscribirse</h3>
      <p>
        <%= button_to "Cancelar suscripción", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary btn-block' %>
      </p>
      <%= link_to "Regresar", :back , class: 'btn btn-secondary btn-block'%>
    </div>
  </div>
</div>
