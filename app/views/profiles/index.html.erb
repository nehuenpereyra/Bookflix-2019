<% if params['removed']!=nil%>
  <div class="alert alert-success" role="alert" style="margin-top:20px;">
    Se a borrado exitosamente el perfil: <%=params['removed']%>
  </div>
<%end%>
<% if params['error_removed']!=nil%>
  <div class="alert alert-danger" role="alert" style="margin-top:20px;">
    No se pudo eliminar el perfil: <%=params['error_removed']%>.
  </div>
<%end%>
<div class="align-items-center text-center">
  <h1>Elige un perfil</h1>
  <div class="row text-center justify-content-center" >
    <% @profiles.each do |profile| %>
      <div>
        <%= link_to image_tag(profile.url_image,style: "margin:10px;width:100px;height:100px;border-radius: 50%;"), profiles_path(:id => profile.id) %>
        <h5><%= profile.name %></h5>
      </div>
    <% end %>
    <% if !(!( !current_subscriber.membership_premium && current_subscriber.current_profiles==2) || !( current_subscriber.membership_premium && current_subscriber.current_profiles==4)) %>
      <button type="button" style="margin:10px" class="btn btn-primary-outline">
        <%= link_to image_tag("data:image/png;base64,", 
        width:"100px",height:"100px"), new_profile_path %>
        <h5>Agregar Perfil</h5>
      </button>
    <%end%>
  </div>
  <% if params['edit']==nil %>
    <%= link_to 'Administrar perfiles', profiles_path(:edit => "true"), {:class => "btn btn-dark"} %>
  <%else%>
    <%= link_to 'Listo', profiles_path, {:class => "btn btn-dark"} %>
  <%end%>
  <%if params['edit']!=nil %>
    <table class="table table-striped" style="margin:20px">
      <thead>
        <tr>
          <th scope="col">Perfil</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.name %></td>
            <td>
              <button type="button" class="btn btn-dark">
                <%= link_to 'Editar', edit_profile_path(profile), {:style=>'color: inherit;'} %>
              </button>
              <button type="button" class="btn btn-dark">
                <%= link_to 'Borrar', profile_path(profile), method: :delete, data: {confirm: 'Seguro que quieres eliminarlo?'},:style=>'color: inherit;'%>
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%end%>
</div>
