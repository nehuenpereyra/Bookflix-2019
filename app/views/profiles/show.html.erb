<div style="margin-top:20px">
  <div style="justify-content:space-between;" class="row">
    <h3>Perfil de: <%= @profile.name %></h3>
    <%= link_to "Cambiar perfil", profiles_path, {:class => 'btn btn-dark', :role => "button", :style =>"margin-left:10px;" }%>
  </div>

  <p>
    <h4>Lista de libros Favoritos (<%=@book_fav.size%>)</h4>
    <ul class="list-group">
      <% @book_fav.each do |book| %>
        <li class="list-group-item"><%= link_to book.title, book_path(book), {:style=>'color: inherit;'}%></li>
      <% end %>
    </ul>
  </p>


  <p>
    <h4>Lista de libros Finalizados (<%=@book_finish.size%>)</h4>
    <ul class="list-group">
      <% @book_finish.each do |book| %>
        <li class="list-group-item"><%= link_to book.title, book_path(book), {:style=>'color: inherit;'}%></li>
      <% end %>
    </ul>
  </p>
  <p>
    <h4>Lista de libros Leyendo (<%=@book_reading.size%>)</h4>
    <ul class="list-group">
      <% @book_reading.each do |book| %>
        <li class="list-group-item"><%= link_to book.title, book_path(book), {:style=>'color: inherit;'}%></li>
      <% end %>
    </p>
    <p>
      <h4>Lista de libros No Leidos (<%=@book_unreading.size%>)</h4>
      <ul class="list-group">
        <% @book_unreading.each do |book| %>
          <li class="list-group-item"><%= link_to book.title, book_path(book), {:style=>'color: inherit;'}%></li>
        <% end %>
      </ul>
    </p>
    <%= link_to 'Regresar', url_for(:back) %>
  </div>
