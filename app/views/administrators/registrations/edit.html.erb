<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <h1 class="my-4 text-center"> Datos de cuenta</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field(:email, {:class => 'form-control', :placeholder => "email@bookflix.com"}) %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <%= f.label :Contraseña_actual %>
          <%= f.password_field(:current_password, {:class => 'form-control',autocomplete: "current-password"}) %>
        </div>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Necesitamos su contraseña actual para confirmar sus cambios.
        </small>
        <div class="actions my-3">
          <%= f.submit('Actualizar datos',{:class => 'btn btn-primary btn-block' }) %>
        </div>
      <% end %>
      <%= link_to "Regresar", :back , class: 'btn btn-secondary btn-block'%>
    </div>
  </div>
</div>
