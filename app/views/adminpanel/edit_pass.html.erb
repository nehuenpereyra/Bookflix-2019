<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <h1 class="my-4 text-center"> Cambiar contrase単a </h1>
      <%= form_for @admin, url: '/admin_panel/edit_pass' do |f|%>
        <% if @admin.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@admin.errors.count, "error") %></h2>
            No se pudo guardar el administrador por:
            <ul>
              <% @admin.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field(:email, {:class => 'form-control', :placeholder => "email@bookflix.com", :required => true}) %>
        </div>
        <div class="field">
          <%= f.label :Nueva_contrase単a %>
          <%= f.password_field(:password, {:class => 'form-control', :autocomplete=> "Dejar en blanco si no desea modificar", :required => true})  %>
        </div>
        <small id="passwordHelpBlock" class="form-text text-muted">
          Su contrase単a debe tener entre 6 y 12 caracteres.
        </small>
        <div class="field">
          <%= f.label :Confirmar_contrase単a %><br />
          <%= f.password_field(:password_confirmation, {:class => 'form-control', autocomplete: "new-password", :required => true}) %>
        </div>
        <div class="actions my-3">
          <%= f.submit('Actualizar datos',{:class => 'btn btn-primary btn-block' }) %>
        </div>
      <% end %>
      <%= link_to "Regresar", '/administrators/edit' , class: 'btn btn-secondary btn-block'%>
    </div>
  </div>
</div>
