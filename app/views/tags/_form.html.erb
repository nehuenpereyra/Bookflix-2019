<%=form_for @tag do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %></h2>
      No se pudo guardar la etiqueta por:
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field(:title, {:class => 'form-control', :required => true})%>
  </p>
  <%= f.submit({:class => 'btn btn-primary'}) %>
</p>
<% end %>
