<% if params['removed']!=nil%>
  <div class="alert alert-success" role="alert" style="margin-top:20px;">
    Se ha borrado exitósamente el género: <%=params['removed']%>
  </div>
<%end%>
<% if params['error_removed']!=nil%>
  <div class="alert alert-danger" role="alert" style="margin-top:20px;">
    No se pudo eliminar el género: <%=params['error_removed']%> ya que se esta utilizando por algun libro.
  </div>
<%end%>
<h1>Listado de Géneros</h1>
<%= link_to 'Agregar género', new_genre_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Género</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.title %></td>
        <td>
          <button type="button" class="btn btn-dark">
            <%= link_to 'Ver', genre_path(genre), {:style=>'color: inherit;'}%>
          </button>
          <button type="button" class="btn btn-dark">
            <%= link_to 'Editar', edit_genre_path(genre), {:style=>'color: inherit;'} %>
          </button>
          <button type="button" class="btn btn-dark">
            <%= link_to 'Borrar', genre_path(genre), method: :delete, data: {confirm: 'Seguro que quieres eliminarlo?'},:style=>'color: inherit;'%>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
